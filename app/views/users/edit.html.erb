<% if @user.errors.any? %>
  <p class="mt-3 text-center"><%= @user.errors.count %>件のエラーが発生しました</p>
  <% @user.errors.full_messages.each do |message| %>
    <li class="devise-error-messages text-center"><%= message %></li>
  <% end %>
<% end %>

<%= form_with model: @user, local:true do |f| %>
<body>
 <main>
  <div class="container">
   <h2 class="fas fa-users-cog mt-4">登録情報編集</h2>




      <div class="form-inline form-group row mt-5">

       <%= f.label :"アカウント名", class: "col-3 control-label" %>
       <%= f.text_field :name, autofocus: true, class: "col-sm-7 form-control", :placeholder =>"アカウント名" %>
      </div>

      <div class="form-inline form-group row mt-5">
        <%= f.label :"アカウント画像", class: "col-3 control-label" %>
        <%= f.attachment_field :image %>
      </div>

      <div class="form-inline form-group row mt-5">
       <%= f.label :"紹介文", class: "col-3 control-label" %>
       <%= f.text_area :introduction, class: "col-sm-7 form-control", id: "input-body", :placeholder =>"160字以内" %>
       <div class="mt-5">
        <div id="counter">0文字</div>
       </div>
      </div>

      <div class=" form-group row mt-5">
       <%= f.submit "Update User", class: "btn btn-outline-dark btn-lg btn-block" %>
      </div>


  </div>
 </main>
</body>
<% end %>