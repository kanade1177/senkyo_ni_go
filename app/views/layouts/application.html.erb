<!DOCTYPE html>
<html>
  <head>
    <title>SenkyoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <!--<a class="navbar-brand p-3" href="/"><#%= image_tag "header.jpg", size:"170x45" %></a>-->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if current_user %>
            <li class="nav-item">
              <%= link_to user_path(current_user.id), class: 'btn  btn-outline-dark ml-3', method: :get do %>
               <i class="fas fa-home">My Page</i>
              <% end  %>
            </li>

            <li class="nav-item">
              <%= link_to tweets_path, class: "btn  btn-outline-dark ml-3", method: :get do %>
                <i class="far fa-list-alt">Tweets</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class: "btn  btn-outline-dark ml-3", method: :get do %>
                <i class="fas fa-users">Users</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to logout_path, class: "btn  btn-outline-dark ml-3" , method: :delete do %>
                <i class="fas fa-sign-out-alt">LogOut</i>
              <% end %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to login_path, class: "btn  btn-outline-dark ml-3", method: :get do %>
                <i class="fas fa-sign-in-alt">LogIn</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to signup_path, class: "btn  btn-outline-dark ml-3", method: :get do %>
                <i class="fas fa-user-check">SignUp</i>
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
  </body>
</html>
