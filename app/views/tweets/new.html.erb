<% if @tweet.errors.any? %>
  <p class="mt-3 text-center"><%= @tweet.errors.count %>件のエラーが発生しました</p>
  <% @tweet.errors.full_messages.each do |message| %>
    <li class="devise-error-messages text-center"><%= message %></p>
  <% end %>
<% end %>

<%= form_with model: @tweet,url:"/tweets", local: true do |f| %>
<body>
  <main>
    <div class="container">
      <h2 class="fas fa-edit mt-4">新規投稿</h2>

        <div class="form-inline form-group row mt-5">
          <%= f.label :"カテゴリー", class: "col-3 control-label" %>
          <%= f.select :category_id, Tweet.category_ids.keys, {}%>
        </div>

        <div class="form-inline form-group row mt-5">
          <%= f.label :"タイトル", class: "col-3 control-label" %>
          <%= f.text_field :title, class: "col-sm-7 form-control" %>
        </div>

        <div class="form-inline form-group row mt-5">
          <%= f.label :"投稿内容", class: "col-3 control-label" %>
          <%= f.text_area :body, class: "col-sm-7 form-control", id: "input-body", :placeholder =>"280字以内" %>
          <div class="mt-5">
           <div id="counter">0文字</div>
          </div>
        </div>

        <div class="form-inline form-group row mt-5">
          <%= f.submit "投稿", class: "btn btn-outline-dark btn-lg btn-block" %>
        </div>

      </div>
    </div>
  </main>
</body>
<% end %>