<%= form_with model: @tweet, local:true do |f| %>

<body>
 <main>
  <div class="container">
   <h2 class="fas fa-pen-nib mt-4">投稿編集</h2>

      <div class="form-inline form-group row mt-5">
          <%= f.label :"カテゴリー", class: "col-3 control-label" %>
          <%= f.select :category_id, Tweet.category_ids.keys, {}%>
      </div>

      <div class="form-inline form-group row mt-5">
       <%= f.label :"タイトル", class: "col-3 control-label" %>
       <%= f.text_field :title, class: "col-sm-7 form-control" %>
      </div>

      <div class="form-inline form-group row mt-5">
       <%= f.label :"投稿内容", class: "col-3 control-label" %>
       <%= f.text_area :body, class: "col-sm-7 form-control", id: "input-body", :placeholder =>"280字以内" %>
      <!-- <div class="mt-5">-->
      <!--  <div id="counter">0文字</div>-->
      <!-- </div>-->
      </div>

      <div class="form-inline form-group row mt-5">
       <%= f.submit "Update Tweet", class: "btn btn-secondary" %>
      </div>
  </div>
 </main>
</body>
<% end %>