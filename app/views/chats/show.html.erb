<div class="container">
    <div class="row">
        <div class="col-md-11 mt-4 text-center">
            <h2><%= @user.name %> さんとのチャット</h2>

            <table class="message table table-borderless">
              <thead>
                <tr>
                  <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
                  <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
                </tr>
              </thead>
              <% @chats.each do |chat| %>
                <% if chat.user_id == current_user.id %>
                <tbody>
                  <tr>
                    <th>
                      <p style="text-align: left;">
                        <%= chat.message %>
                      </p>
                    <th></th>
                  </tr>
                <% else %>
                  <tr>
                    <th></th>
                    <th>
                      <p style="text-align: right;"><%= chat.message %></p>
                    </th>
                  </tr>
                </tbody>
                <% end %>
              <% end %>
            </table>
            <%= form_with model: @chat, remote: true do |f| %>
              <%= f.text_field :message, class: "form-control mt-5" %>
              <%= f.hidden_field :room_id %>
              <%= f.submit "送信", class:"btn btn-sm btn-success chat-btn btn-block mt-2" %>
            <% end %>
        </div>
    </div>
</div>